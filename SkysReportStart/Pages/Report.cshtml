@page
@model ReportModel
@{
    ViewData["Title"] = "Rapport";
}

<form method="GET">
    <div class="form-group">
        <label for="q">Filtrera</label>
        <input asp-for="SearchTerm" type="text" class="form-control" id="q" name="q" aria-describedby="emailHelp" placeholder="Filter">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a hidden="@string.IsNullOrEmpty(Model.SearchTerm)" asp-route-q="" class="btn btn-danger">Reset</a>
</form>

<hr/>
<table class="table">
<thead>
<tr>
    <th scope="col">Namn</th>
    <th scope="col">Kategori</th>
    <th scope="col">Pris</th>
    <th scope="col">Leverantör</th>
</tr>
</thead>
<tbody>
    @foreach (var item in Model.Items)
    {
    <tr>
        <td>
            @item.ProductName
        </td>
        <td>
            @item.CategoryName
        </td>
        <td>
            @string.Format("{0:0.00}kr",item.Price)
        </td>
        <td>
            @item.SupplierName
        </td>

    </tr>
    }
</tbody>
</table>